package com.$group.replace("-", "").${name.replace("-", "")}.application;

import com.$group.replace("-", "").${name.replace("-", "")}.domain.Demo;
import com.$group.replace("-", "").${name.replace("-", "")}.infrastructure.repositories.DemoRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import java.util.List;


@Component
public class DemoService {

    @Autowired
    private DemoRepository repository;

    public List<Demo> getDemos() {
        return repository.findAll();
    }

    public Demo getDemosById(Long demoId) {
        return repository.findById(demoId);
    }

    public Demo save(Demo demo) {
        return repository.findById(repository.save(demo));
    }
}
