package com.${group.replace("-", "")}.${name.replace("-", "")}.infrastructure.repositories;

import com.${group.replace("-", "")}.${name.replace("-", "")}.domain.Demo;
import com.${group.replace("-", "")}.${name.replace("-", "")}.infrastructure.repositories.dataentity.DemoDataEntity;
import com.${group.replace("-", "")}.${name.replace("-", "")}.infrastructure.repositories.persistence.DemoJpaPersistence;
import com.google.common.collect.Lists;
import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import java.util.List;
import java.util.Optional;

@Component
public class DemoRepository {

    protected static final ModelMapper mapper = new ModelMapper();

    @Autowired
    private DemoJpaPersistence repository;

    public Long save(Demo demo) {
        DemoDataEntity demoDataEntity =
                repository.save(mapper.map(demo, DemoDataEntity.class));
        return  demoDataEntity.getId();
    }


    public Demo findById(Long productId) {
        Optional<DemoDataEntity> product = repository.findById(productId);
        return product.map(demoDataEntity -> mapper.map(demoDataEntity, Demo.class)).orElse(null);
    }

    public List<Demo> findAll() {
        List<Demo> result = Lists.newArrayList();

        Iterable<DemoDataEntity> iterable = repository.findAll();

        iterable.forEach((demoDataEntity) -> result.add(mapper.map(demoDataEntity, Demo.class)));

        return result;
    }
}
